print("Bem vindo ao sistema de cadastro de alunos!")

aluno = []
alunos = []

opcao = 0
while opcao != 6:
    print('''    [1] Create
    [2] Read
    [3] Update
    [4] Delete
    [5] Save
    [6] Finalizar cadastro''')
    opcao = int(input("insira o número da opção para executa-la: "))

#[1] Create: inserir o elemento na lista.
    if opcao == 1:
        aluno.append(str(input("Qual o nome completo do aluno? ")))
        aluno.append(int(input("Qual a matrícula do aluno? ")))
        alunos.append(aluno[:])
        aluno.clear()


#[2] Read: mostrar a lista.
    elif opcao == 2:
        print(alunos)

#[3] Update: alterar elemento da lista.
    elif opcao == 3:
        escolha = 0
        while escolha != 3:
            print('''    [1] Nome
            [2] Mátricula
            [3] Ambas''')
            int(input("Qual informação você deseja atualizar no cadastro? "))

            if escolha == 1:
                nome_update = str(input("Qual o nome do aluno a ser alterado no cadastro? "))
                nome_new  = str(input("Qual novo nome a ser inserido no cadastro? "))

                for aluno in alunos:
                    if aluno[0] == nome_update:
                        aluno[0] == nome_new

                    else:
                        print("O nome inserido não é válido.")

            elif escolha == 2:
                matricula_update = int(input("Qual a mátricula a ser alterada no cadastro? "))
                matricula_new = int(input("Qual a nova mátricula a ser inserida no cadastro? "))

                for aluno in alunos:
                    if aluno[1] == matricula_update:
                        aluno[1] == matricula_new

                    else:
                        print("A mátricula inserida não é válida.")

            elif escolha == 3:
                nome_update = str(input("Qual o nome do aluno a ser alterado no cadastro? "))
                matricula_update = int(input("Qual a mátricula a ser alterada no cadastro? "))
                nome_new = str(input("Qual novo nome a ser inserido no cadastro? "))
                matricula_new = int(input("Qual a nova mátricula a ser inserida no cadastro? "))

                for aluno in alunos:
                    if aluno[0] == nome_update:
                        aluno[0] == nome_new

                    if aluno[1] == matricula_update:
                        aluno[1] == matricula_new

                    else:
                        print("Os dados inseridos não são válidos.")


#[4] Delete: apagar elemento da lista.
    elif opcao == 4:
       nome_delete = str(input("Qual o nome do aluno a ser apagado do cadastro? "))
       for aluno in alunos:
           if aluno[0] == nome_delete:
               alunos.remove(aluno)
           else:
               print("O nome inserido não foi encontrado no cadastro. Tente novamente.")

#[5] Save: salva a lista atual para um documento txt.
    elif opcao == 5:
        arquivo = open("lista-alunos", "w")
        arquivo.write(alunos)

#[6] Finalizar cadastro: encerra o programa.
    elif opcao == 6:
        print("Finalizando...")

# Aciona se uma opção inválida for digitada.
    else:
        print("Opção inválida. Tente novamente.")
